@charset "UTF-8"
@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Gothic+A1:wght@100;200;300;400;500;600;700;800;900&display=swap')
*
  padding: 0
  margin: 0
  color: #13263b
  font-family: 'JetBrains Mono', 'Gothic A1', monospace
  &::-webkit-scrollbar
    display: none
a
  text-decoration: none
body, html
  height: 100vh;
  height: calc(100vh);
  height: calc(var(--vh, 1vh) * 100);
  width: 100vw
  overflow: hidden
.page
  width: 100%
  height: 100%
.header
  box-sizing: border-box
  //padding: (3/375)*100vw
  width: 100%
  background-color: #e9eef3
  height: (60/667) * 100%
  position: relative
h1
  text-align: center
  font-size: (26/375) * 100vw
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 100%
.main
  width: 100%
  height: (527/667) * 100%
  box-sizing: border-box
  padding: 5%
  .indexPage
    //background-color: #306095
    width: 100%
    height: 100%
    box-sizing: border-box
    position: relative
    > h2
      width: 100%
      text-align: center
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      span
        color: #306095
  .abilityPage
    width: 100%
    height: 100%
    overflow: auto
    box-sizing: border-box
    display: flex
    flex-direction: row
    justify-content: space-evenly
    //align-content: space-around
    flex-wrap: wrap
    //background: black
    padding-bottom: (20/375) * 100vw
    .iconBox
      width: (90/375) * 100vw
      height: (90/375) * 100vw
      background: white
      margin: (20/375) * 100vw 0 0 0
      border-radius: 10px
      position: relative
      //box-shadow: 0 0 5px 1px #ddd
      .iconSize
        width: 100%
        height: 100%
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        text-align: center
        display: flex
        flex-direction: column
        justify-content: start
        p
          font-size: (10/375) * 100vw
        img
          margin: auto
          width: 85%
          height: 85%
        //.jQueryUI
        //  top: 50%
        //  left: 50%
        //  transform: translate(-50%, -50%)
        //  position: absolute
        //  width: 90%
        //  height: 90%
        .jQueryUI
          width: 70%
          height: 70%
  .portfolioPage
    width: 100%
    height: 100%
    //background-color: black
    display: flex
    flex-direction: column
    justify-content: start
    overflow: auto
    .portfolioInnerBox
      width: 100%
      //height: (100/375) * 100vw
      //background-color: white
      margin: 0 auto (30/375) * 100vw auto
      img
        width: 90%
        margin: auto
        display: block
        box-shadow: 0 0 10px 1px #c0cfdf
      span
        line-height: (100/375) * 100vw
        a
          text-align: center
          display: inline-block
          height: (35/375) * 100vw
          width: (75/375) * 100vw
          box-sizing: border-box
          margin: (32.5/375) * 100vw 0
          float: right
          font-size: (18/375) * 100vw
          line-height: (35/375) * 100vw
          margin-left: (10/375) * 100vw
          background-color: #c0cfdf
          border-radius: 10px
        &:first-child
          font-size: (26/375) * 100vw
  .contactPage
    width: 100%
    height: 100%
    //background-color: yellow
    font-style: initial
    position: relative
    .contactPageInner
      position: absolute
      top: 35%
      left: 50%
      transform: translate(-50%, -50%)
      width: 90%
      h2
        font-size: (20/375) * 100vw
.footer
  box-sizing: border-box
  margin: auto
  margin-bottom: (20/667) * 100%
  border-radius: 20px
  width: 80%
  background-color: #c0cfdf
  height: (60/667) * 100%
  position: relative
  > p
    width: 100%
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    display: flex
    justify-content: space-evenly
    flex-direction: row
    > a
      //width: (120/375) * 100vw
      //height: (30/375) * 100vw
      line-height: (30/375) * 100vw
      color: #fff
      font-size: (30/375) * 100vw
.firstPageMain
  padding: 0
.fadeOutAnimation
  animation: fadeUp 2s forwards
  position: relative
  top: 40px
  opacity 0
  @keyframes fadeUp
    from
      opacity: 0
      top: 40px
    to
      opacity: 1
      top: 0